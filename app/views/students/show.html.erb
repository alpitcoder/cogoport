<div class="container py-5">
  <h3>Student</h3>
  <div class="row">
    <div class="col">
      <%= link_to "Students", students_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Edit", edit_student_path %>
    </div>
  </div>


  <div class="row bg-light">
    <div class="col-12 col-lg-8 p-lg-5 pt-4">
      <%= @student.first_name %>
    </div>
    <div class="col-12 col-lg-8 p-lg-5 pt-4">
      <%= @student.last_name %>
    </div>
    <div class="col-12 col-lg-8 p-lg-5 pt-4">
      <%= @student.email %>
    </div>
    <div class="col-12 col-lg-8 p-lg-5 pt-4">
      <%= @student.date_of_birth %>
    </div>
  </div>

</div>
